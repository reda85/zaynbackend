import { Style } from '@react-pdf/types';
import defaultTheme from 'tailwindcss/defaultTheme';

type ExtendableDeepPartial<T> = {
    [P in keyof T]?: T[P] extends object ? ExtendableDeepPartial<T[P]> : T[P];
} & Record<string, unknown>;

type DefaultTheme = typeof defaultTheme;
type ThemeBaseConfig = Omit<ExtendableDeepPartial<typeof defaultTheme>, "colors" | "fontFamily">;
type ThemeConfig = ThemeBaseConfig & {
    colors?: Record<string, string | Record<number, string>>;
    fontFamily?: Partial<DefaultTheme["fontFamily"]> & {
        [key: string]: string | string[];
    };
};
type Options = {
    ptPerRem?: number;
};
declare function createTw(config: ThemeConfig, options?: Options): (input: string) => Style;

export { createTw };
